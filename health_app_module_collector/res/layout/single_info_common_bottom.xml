<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <!-- 我的分享空间底部bottom的操作 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/info_detail_ops_sc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:drawableTop="@drawable/info_share"
            android:onClick="info_ops_bar"
            android:text="收藏"
            android:textColor="#000000"
            android:textSize="10sp" >
        </Button>

        <Button
            android:id="@+id/info_detail_ops_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:drawableTop="@drawable/info_commont2"
            android:onClick="info_ops_bar"
            android:text="评论"
            android:textColor="#000000"
            android:textSize="10sp" >
        </Button>

        <Button
            android:id="@+id/info_detail_ops_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:drawableTop="@drawable/info_tags"
            android:onClick="info_ops_bar"
            android:text="标签"
            android:textColor="#000000"
            android:textSize="10sp" >
        </Button>

        <Button
            android:id="@+id/info_detail_ops_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:drawableTop="@drawable/info_ok2"
            android:onClick="info_ops_bar"
            android:text="有用"
            android:textColor="#000000"
            android:textSize="10sp" >
        </Button>

        <Button
            android:id="@+id/info_detail_ops_nook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:drawableTop="@drawable/info_nouse"
            android:onClick="info_ops_bar"
            android:text="没用"
            android:textColor="#000000"
            android:textSize="10sp" >
        </Button>
    </LinearLayout>

</LinearLayout>