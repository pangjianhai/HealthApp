<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_weight="3"
        android:gravity="center"
        android:text="@string/share_prepare_top_hint" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/share_prepare_eating"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/half_trans"
            android:drawableTop="@drawable/share_ops_food"
            android:text="@string/share_prepare_eat" />

        <Button
            android:id="@+id/share_prepare_go"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/half_trans"
            android:drawableTop="@drawable/share_ops_yd"
            android:text="@string/share_prepare_go" />

        <Button
            android:id="@+id/share_prepare_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/half_trans"
            android:drawableTop="@drawable/share_ops_info"
            android:text="@string/share_prepare_info" />
    </LinearLayout>

    <ImageView
        android:id="@+id/share_prepare_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:scaleType="matrix"
        android:src="@drawable/close_share" />

</LinearLayout>