<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <!-- 图片选择的入口，选择完后图片渲染的地方 -->

    <EditText
        android:id="@+id/share_send_health_content"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/bg_share_edittext"
        android:gravity="top"
        android:hint="@string/share_health_input"
        android:maxLines="6" />

    <GridView
        android:id="@+id/share_health_gridview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/share_send_health_content"
        android:columnWidth="110dp"
        android:gravity="center"
        android:horizontalSpacing="2dp"
        android:numColumns="4"
        android:stretchMode="columnWidth"
        android:verticalSpacing="3dp" >

        <!-- 内部的元素自己java代码构造出来 -->
    </GridView>

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        layout="@layout/share_sentence_bottom" />

    <ProgressBar
        android:id="@+id/share_health_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

</RelativeLayout>