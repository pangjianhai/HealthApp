<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/comment_gray" >

    <!-- 个人信息展示页面 -->
    <!-- 匿名查看的东西 -->

    <LinearLayout
        android:id="@+id/layout_space_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="5dp" >

        <TextView
            android:id="@+id/space_notice_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="暂未关注，点击“更多主题”可以关注"
            android:textAppearance="@android:attr/textAppearanceInverse"
            android:textColor="@color/bgray"
            android:textSize="18sp"
            android:textStyle="italic"
            android:visibility="gone" />

        <cn.com.hzzc.health.pro.part.XListView
            android:id="@+id/space_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:divider="@color/deepgray"
            android:dividerHeight="1dp"
            android:visibility="visible" >
        </cn.com.hzzc.health.pro.part.XListView>
    </LinearLayout>

    <Button
        android:id="@+id/single_push_bottom_ops_sc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/topic_more"
        android:paddingBottom="22dp"
        android:paddingTop="50dp"
        android:text="更多主题"
        android:textColor="@color/orange"
        android:textSize="15sp" />

</RelativeLayout>