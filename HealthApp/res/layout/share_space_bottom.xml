<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- 我的分享空间底部bottom的操作 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#dedede"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/share_dynamic_opration_bannaer_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawableLeft="@drawable/close_share"
            android:text="返回"
            android:textColor="#aaaaaa" />

        <TextView
            android:id="@+id/share_dynamic_opration_bannaer_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawableLeft="@drawable/pub2"
            android:text="分享"
            android:textColor="#aaaaaa" />

        <TextView
            android:id="@+id/share_dynamic_opration_bannaer_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawableLeft="@drawable/quan_comment"
            android:text="回复"
            android:textColor="#aaaaaa" />
    </LinearLayout>

</LinearLayout>